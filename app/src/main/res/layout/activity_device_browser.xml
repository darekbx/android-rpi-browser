<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".ui.deviceselect.DeviceSelectActivity"
        android:clipToPadding="false">

    <ImageView
            android:id="@+id/up_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/inPadding"
            android:layout_marginBottom="@dimen/outPadding"
            android:layout_marginTop="@dimen/outPadding"
            android:src="@drawable/ic_left"
            android:alpha="0.5"
            android:onClick="onGoUpClick"
    />
    <TextView
            android:id="@+id/move_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/up_icon"
            app:layout_constraintBottom_toBottomOf="@id/up_icon"
            app:layout_constraintStart_toEndOf="@id/up_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/inPadding"
            android:text="."
            android:typeface="monospace"
            android:textColor="#666"
            android:onClick="onGoUpClick"
    />
    <LinearLayout
            android:id="@+id/delimiter"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/up_icon"
            android:layout_marginTop="@dimen/outPadding"
            android:background="#2000"
    />

    <ListView
            android:id="@+id/browser_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/delimiter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#2000"
            android:visibility="gone">
        <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>